// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id              String    @id @default(cuid())
  reservationId   String    @unique // Otomatik üretilen rezervasyon numarası
  adSoyad         String    // Ad Soyad
  telefon         String    // Telefon numarası
  kacKisi         Int       // Kaç kişi
  cocukSayisi     Int       @default(0) // Çocuk sayısı
  turTarihi       DateTime  // Tur tarihi
  turAdi          String    // Tur adı
  turFiyati       Decimal   // Kişi başı tur fiyatı
  toplamTutar     Decimal   // Toplam tutar (kacKisi * turFiyati + cocukSayisi * (turFiyati/2))
  not             String?   // Opsiyonel not
  biletTipi       String    @default("Servis Kullanacak") // "Servis Kullanacak" veya "Kendi Aracı ile Gelecek"
  alinisYeri      String?   // Alınış yeri (sadece "Kendi Aracı ile Gelecek" için)
  alinisSaati     String?   // Alınış saati (HH:MM formatında, sadece "Kendi Aracı ile Gelecek" için)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("bookings")
}
